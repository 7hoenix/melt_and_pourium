  <%= stylesheet_link_tag '1-col-portfolio', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">All Categories</h1>
            </div>
        </div>

        <!-- Categories -->
        <% @categories.each do |category| %>

        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <img class="img-responsive" src="http://placehold.it/700x300" alt="">
                </a>
            </div>
            <div class="col-md-5 name">
                <h1 id='name'><%= link_to category.name, category_path(category.id) %></h1>
                <h3>Subheading</h3>
            </div>
        </div>
        <hr>
        <% end %>
    </div>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
