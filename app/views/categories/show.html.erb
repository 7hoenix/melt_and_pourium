<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>

  <!-- Page Content -->
<div class="container">

  <!-- Title -->
  <header class="jumbotron hero-spacer">
    <h1><%= @category.name %></h1>
    <div class="row">
      <div class="col-lg-12">
        <% if current_user && current_user.admin? %>
          <p><%= link_to "Add Item", new_item_path %></p>
        <% end %>
      </div>
    </div>
  </header>

  <hr>

  <!-- Items -->
  <% @category.items.each do |i| %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail caption text-center">
        <img src=<%= i.image_url %> alt="">
        <h3><%= i.name %></h3>
        <p><%= i.description %></p>
        <h4><%= number_to_currency(i.price) %></h4>
        <p>
          <%= button_to "Add #{i.name}" , cart_items_path(item_id: i.id) %>
        </p>
          <% if current_user && current_user.admin? %>
            <%= link_to "Edit Item", edit_item_path(i) %>
          <% end %>
      </div>
    </div>
  <% end %>
</div>
  <!-- /.container -->

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
