<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>

  <!-- Page Content -->
  <div class="container">

      <!-- Jumbotron Header -->
          <h2>All Orders</h2>

      <hr>

      <!-- Orders -->
      <table class='table table-bordered'>
        <tr>
          <th class="text-center"><h4>Order Id</h4></th>
          <th class="text-center"><h4>Order Date<h4></th>
          <th class="text-center"><h4>Order Time<h4></th>
          <th class="text-center"><h4>Order Total<h4></th></u>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td class="text-center"><strong><%= link_to "Order #{order.id}", order_path(order) %></strong></td>
          <td class="text-center"><strong>Date Ordered:</strong> <%= order.date %></td>
          <td class="text-center"><strong>Time Ordered:</strong> <%= order.time %></td>
          <td class="text-center"><strong>Total Price:</strong> <%= order.total_price %></td>
        </tr>
      <% end %>
      </table>
  </div>
  <!-- /.container -->

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
