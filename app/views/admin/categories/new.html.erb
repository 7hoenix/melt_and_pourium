<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>
<br>
<br>
  <!-- Page Content -->
  <div class="container">
  <br>
  <!-- <div class="row"> -->
  <div class="col-md-4">
        <h2>New Category</h2>
        <br>
        <%= form_for [:admin, @category] do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-md", placeholder: "Name" %>
          </div>
          <div class="form-group">
            <%= f.text_field :image_url, class: "form-control input-md", placeholder: "Image Url" %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Category" %>
          </div>
        <% end %>
  </div>
</div>
<!-- /.container -->

<!-- jQuery -->
<script src="js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>
