<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>
<br>
<br>
  <!-- Page Content -->
  <div class="container">
  <br>

  <!-- <div class="row"> -->
  <div class="col-md-4">
    <div class="well">
        <h2>Edit Category</h2>
        <br>
        <%= form_for @category, url: admin_category_path(@category), method: :patch do |f| %>
          <div class="form-group">
            <%= f.label "Name" %>
            <%= f.text_field :name, class: "form-control input-md", placeholder: "Name" %>
          </div>
          <div class="form-group">
            <%= f.label "Image Url" %>
            <%= f.text_field :image_url, class: "form-control input-md", placeholder: "Image Url" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Category", class: "btn btn-primary" %>
          </div>
        <% end %>
        <%= link_to "DELETE CATEGORY", admin_category_path(@category), method: :delete,
          data: {confirm: "WARNING: Destructive action. This will also delete all items in this category... so make sure you mean it."},
          class: "btn btn-md btn-danger" %>
      </div>
  </div>
</div>

  <!-- /.container -->

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
