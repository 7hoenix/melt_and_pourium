<div class="well">
<%= form_for :user_and_address, url: user_path, method: :patch do |f| %>
  <div class="form-group">
    <%= f.text_field :first_name, class: "form-control input-md", placeholder: "First Name" %>
  </div>
  <div class="form-group">
    <%= f.text_field :last_name, class: "form-control input-md", placeholder: "Last Name" %>
  </div>
  <div class="form-group">
    <%= f.text_field :phone_number, class: "form-control input-md", placeholder: "Phone Number" %>
  </div>
  <div class="form-group">
    <%= f.text_field :street_address, class: "form-control input-md", placeholder: "Street" %>
  </div>
  <div class="form-group">
    <%= f.text_field :apt, class: "form-control input-md", placeholder: "Apt" %>
  </div>
  <div class="form-group">
    <%= f.text_field :city, class: "form-control input-md", placeholder: "City" %>
  </div>
  <div class="form-group">
    <%= f.text_field :state, class: "form-control input-md", placeholder: "State" %>
  </div>
  <div class="form-group">
    <%= f.text_field :zip_code, class: "form-control input-md", placeholder: "Zip Code" %>
  </div>
    <%= f.submit "Update", class: "btn btn-primary" %>
  <% end %>
</div>
