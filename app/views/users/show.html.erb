<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>
<br>
<br>
  <!-- Page Content -->
  <div class="container">

  <div class="row">
    <div class="col-lg-12 ">
      <h1> Hello <%= @user.email %> </h1>
    </div>
  </div>

  <hr>
  <div>
      <%= link_to "Order History", orders_path%>
  </div>
  <br>

  <!-- <div class="row"> -->
  <div class="col-md-4">
      <div class="well">
        <h2>Address</h2>

        <br>

        <%= form_for :sessions, url: login_path do |f| %>
          <div class="form-group">
            <%= f.text_field :street, class: "form-control input-md", placeholder: "Street" %>
          </div>
          <div class="form-group">
            <%= f.text_field :place_number, class: "form-control input-md", placeholder: "Apt/Suite/Floor" %>
          </div>
          <div class="form-group">
            <%= f.text_field :city, class: "form-control input-md", placeholder: "City" %>
          </div>
          <div class="form-group">
            <%= f.text_field :state, class: "form-control input-md", placeholder: "State" %>
          </div>
          <div class="form-group">
            <%= f.text_field :zipcode, class: "form-control input-md", placeholder: "Zip Code" %>
          </div>
          <div class="form-group">
            <%= f.text_field :phone_number, class: "form-control input-md", placeholder: "Phone Number" %>
          </div>

          <div class="form-group">
            <%= f.submit "Update" %>
          </div>
        <% end %>

      </div>

  </div>

</div>
  <!-- /.container -->

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
