<div class = "container">
  <div class = "row">
      <h2><%= @item.name %> from VENDORNAME</h2>
      <h4><%= link_to "Back to CATEGORYNAME", "#" %></h4>
    <div class= "img-responsive center-block">
      <img src=<%= @item.image_url %> alt="">
    </div>

    <div>
      <h3><%= @item.description %></h3>
      <h3><%= number_to_currency(@item.price) %></h3>
    </div>

    <div class = "col-md-7">
      <div class = "row">
        <div class= "col-md-offset-2 col-md-3">
          <h4><%= link_to "Add #{@item.name}",
            cart_items_path(item_id: @item.id),
            method: :patch %></h4>
        </div>
        <div class= "col-md-3">
          <h4><%= "Cart Qty: #{cart.cart_data[@item.id.to_s]}" %></h4>
        </div>
        <div class= "col-md-3">
          <h4><%= link_to "Remove #{@item.name}",
            cart_items_path(item_id: @item.id),
            method: :delete %></h4>
        </div>
      </div>
    </div>
  </div>
</div>
