<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>

  <!-- Page Content -->
  <div class="container">

      <!-- Jumbotron Header -->
      <header class="jumbotron hero-spacer">
          <h1>All Items</h1>
          <p>
            <%= link_to "View by category", categories_path %>
          </p>
      </header>

      <hr>
      <!-- Title -->
      <div class="row">
        <div class="col-lg-12">
          <% if current_user && current_user.admin? %>
            <h3><%= link_to "Add Item", new_item_path %></h3>
          <% end %>
        </div>
      </div>
      <!-- /.row -->

      <!-- Items -->
      <% @items.each do |item| %>

          <div class="col-md-3 col-sm-6 hero-feature">
              <div class="thumbnail">
                <img src=<%= item.image_url %> alt="">
                  <div class="caption text-center">
                      <h3><%= item.name %></h3>
                      <p><%= item.description %></p>
                      <h4><%= number_to_currency(item.price) %></h4>
                      <p>
                          <%= button_to "Add #{item.name}" , cart_items_path(item_id: item.id) %>
                      </p>
                  </div>
              </div>
          </div>

      <% end %>
  </div>
  <!-- /.container -->

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
