<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>
<br>
<br>
  <!-- Page Content -->
  <div class="container">
  <br>

  <!-- <div class="row"> -->
  <div class="col-md-4">
        <h2>Edit Item</h2>

        <br>

        <%= form_for [@category, @item], url: item_path, method: :patch do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-md", placeholder: "Name" %>
          </div>
          <div class="form-group">
            <%= f.text_field :description, class: "form-control input-md", placeholder: "Description" %>
          </div>
          <div class="form-group">
            <%= f.text_field :price, class: "form-control input-md", placeholder: "Price" %>
          </div>
          <div class="form-group">
            <%= f.text_field :image_url, class: "form-control input-md", placeholder: "Image Url" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Item" %>
          </div>
        <% end %>

  </div>

</div>
  <!-- /.container -->

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
