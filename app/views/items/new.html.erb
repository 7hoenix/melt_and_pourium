<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>
<br>
<br>
  <!-- Page Content -->
  <div class="container">

  <div class="row">
    <div class="col-lg-12 ">
      <h1> New Item </h1>
    </div>
  </div>

  <hr>
  <div>
      <%= link_to "Order History", orders_path%>
  </div>
  <br>

  <!-- <div class="row"> -->
  <div class="col-md-4">
      <div class="well">
        <h2>Address</h2>

        <br>

        <%= form_for @item do |f| %>
          <div class="form-group">
            <%= f.label :category %>
            <%= collection_select :item, :category_id, Category.all, :id, :name, class: "form-control input-md", placeholder: "Category" %>
          </div>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-md", placeholder: "Name" %>
          </div>
          <div class="form-group">
            <%= f.text_field :description, class: "form-control input-md", placeholder: "Description" %>
          </div>
          <div class="form-group">
            <%= f.text_field :price, class: "form-control input-md", placeholder: "Price" %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Item" %>
          </div>
        <% end %>

      </div>

  </div>

</div>
  <!-- /.container -->

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
